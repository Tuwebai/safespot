{
  "name": "safespot-backend",
  "version": "1.0.0",
  "description": "Anonymous backend for SafeSpot - No authentication required",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "node --max-old-space-size=1024 --watch src/index.js",
    "start": "node --max-old-space-size=2048 src/index.js",
    "migrate": "node src/scripts/migrate.js",
    "sync:counters": "node src/scripts/syncCounters.js",
    "test-connection": "node test-connection.js",
    "test-db": "node test-direct-connection.js",
    "test:contracts": "node src/scripts/verify-contract.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "security:audit": "node scripts/security-audit.js",
    "security:test": "node tests/security/chat-membership.test.js",
    "test": "vitest run",
    "prepare": "cd .. && husky install server/.husky || true"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.4.0",
    "@supabase/supabase-js": "^2.89.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0",
    "bullmq": "^5.67.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "google-auth-library": "^10.5.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.9.1",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "pdfkit": "^0.17.2",
    "pg": "^8.18.0",
    "sharp": "^0.34.5",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "web-push": "^3.6.7",
    "xss": "^1.0.15",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^9.0.7",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "supertest": "^7.2.2",
    "vitest": "^4.0.17"
  }
}